<?xml version="1.0"?>

<launch>

<!-- red side robot -->
  <group ns="blue_bot">

      <!-- robot run -->
      <node pkg="onigiri_war" type="enemy.py" name="enemyRun" output="screen"/>
  </group>

<!-- blue side robot -->
  <group ns="red_bot">



      <!-- Your robot control node run -->
      <!-- You can change control program  -->
      <!-- <node pkg="onigiri_war" type="runAlongTheWall.py" name="WallBotRun" output="screen"/>-->
      <node name="twist_pid" pkg="pid" type="controller" ns="twist">
        <param name="Kp" value="0.015" />
        <param name="Ki" value="0.0" />
        <param name="Kd" value="0.002" />

        <param name="upper_limit" value="1" />
        <param name="lower_limit" value="-1" />

      </node>

      <node name="wall_pid" pkg="pid" type="controller" ns="wall">
        <param name="Kp" value="1" />
        <param name="Ki" value="0.0" />
        <param name="Kd" value="0.0" />

        <param name="upper_limit" value="0.05" />
        <param name="lower_limit" value="-0.05" />        
      </node>


      <node pkg="onigiri_war" type="pubWallDistance.py" name="WallDistanceNode" output="screen" />
      
      <node pkg="onigiri_war" type="runAlongTheWall.py" name="AlongWallNode" output="screen" />
      
      <!-- End of your space  -->



  </group>

  <!--
  <node name="rqt_reconfigure" pkg="rqt_reconfigure" type="rqt_reconfigure" />
  <node name="rqt_plot" pkg="rqt_plot" type="rqt_plot"
    args="/red_bot/control_effort/data /red_bot/state/data /red_bot/setpoint/data /red_bot/wall_distance_left/data" />
  -->

    <node name="rqt_plot" pkg="rqt_plot" type="rqt_plot"
    args="/red_bot/twist/control_effort/data /red_bot/twist/state/data /red_bot/robot_angle_left/data" />

</launch>

